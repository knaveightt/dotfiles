# vi:syntax=zsh

# ls alias
alias ll="ls -alG --color=auto"
alias ls="ls --color=auto"

# file explorer alias
alias f="ranger"

# vim alisa and shortcuts
alias v="nvim"
alias vv="nvim ~/.config/nvim/init.vim"
alias va="nvim ~/.config/aliasrc"
alias vq="nvim ~/.config/qtile/config.py"
alias vz="nvim ~/.config/zsh/.zshrc"
alias vm="nvim ~/.config/mpd/mpd.conf"
alias vf="nvim ~/.config/vifm/vifmrc"
alias vd="nvim ~/.config/dunst/dunstrc"
alias vc="nvim ~/.config/picom/picom.conf"

# dotfile tracking alias
alias dfiles='/usr/bin/git --git-dir=$HOME/Projects/dotfiles --work-tree=$HOME'
# must be sure to execute the above and the following to get started:
# dfiles config --local status.showUntrackedFiles no

# program shortcut alias
alias sxiv="~/.config/sxiv/iv.sh"
alias iv="sxiv *"

# other commands
alias cpat="cat ~/Documents/text/git_pat"
